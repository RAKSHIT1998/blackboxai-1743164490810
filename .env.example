# Server Configuration
PORT=8000
NODE_ENV=production
CLIENT_URL=https://betswizz.com

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=betswizz
DB_USER=postgres
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=24h

# Sports API Keys
ODDSMATRIX_URL=https://api.oddsmatrix.com
ODDSMATRIX_KEY=your_oddsmatrix_key
BETFAIR_URL=https://api.betfair.com
BETFAIR_KEY=your_betfair_key
SPORTRADAR_URL=https://api.sportradar.com
SPORTRADAR_KEY=your_sportradar_key

# Casino API Keys
EVOLUTION_URL=https://api.evolution.com
EVOLUTION_KEY=your_evolution_key
PRAGMATIC_URL=https://api.pragmatic.com
PRAGMATIC_KEY=your_pragmatic_key
BGAMING_URL=https://api.bgaming.com
BGAMING_KEY=your_bgaming_key

# Payment Gateway Keys
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLIC_KEY=your_stripe_public_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_SECRET=your_razorpay_secret
COINPAYMENTS_KEY=your_coinpayments_key
COINPAYMENTS_SECRET=your_coinpayments_secret
NOWPAYMENTS_API_KEY=your_nowpayments_key

# Mini Games API Keys
SPRIBE_URL=https://api.spribe.com
SPRIBE_KEY=your_spribe_key
HACKSAW_URL=https://api.hacksaw.com
HACKSAW_KEY=your_hacksaw_key

# Security Configuration
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
SSL_PRIVATE_KEY_PATH=/path/to/private.key
SSL_CERTIFICATE_PATH=/path/to/certificate.crt

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Redis Configuration (for caching and session)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# Feature Flags
ENABLE_2FA=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_CRYPTO_PAYMENTS=true
MAINTENANCE_MODE=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/betswizz/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_TIMEOUT=30000

# KYC Provider
KYC_PROVIDER_URL=https://api.kyc-provider.com
KYC_PROVIDER_KEY=your_kyc_provider_key

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_newrelic_key

# Blockchain Network (for crypto transactions)
WEB3_PROVIDER=https://mainnet.infura.io/v3/your-project-id
PLATFORM_WALLET=your_platform_wallet_address